root = true

[*.cs]
# C# code style and formatting
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true

# Prefer vertical multi-line parameters for all methods/constructors
csharp_new_line_before_open_brace = all
csharp_preserve_single_line_statements = false
csharp_preserve_single_line_blocks = false

# Multi-line formatting preferences
csharp_new_line_before_members_in_object_initializers = true
csharp_new_line_before_members_in_anonymous_types = true
csharp_new_line_between_query_expression_clauses = true

# Parameter formatting (manual enforcement - place each parameter on its own line)
# Constructor parameters: vertical alignment with proper indentation
# Method parameters: vertical alignment with proper indentation  
# Return statements: break long chains and string concatenation
# String concatenation: use + operator on new lines with proper indentation

# Always place each parameter on its own line (manual enforcement)
